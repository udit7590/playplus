<!-- login -->
<div class="login">
  <div class="container">
    <div class="login-body">
      <div class="login-heading">
        <h1>Login</h1>
      </div>
      <div class="login-info">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.email_field :email, autofocus: true, placeholder: 'Email', required: true, class: 'user' %>
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'lock' %>
          <div class="forgot-top-grids">

            <% if devise_mapping.rememberable? -%>
              <div class="forgot-grid">
                <ul>
                  <li>
                    <%= f.check_box :remember_me, id: 'brand1' %>
                    <label for="brand1"><span></span>Remember me</label>
                  </li>
                </ul>
              </div>
            <% end -%>

            <div class="forgot">
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot password?", new_password_path(resource_name) %><br />
              <% end -%>
            </div>
            <div class="clearfix"> </div>
          </div>

          <%= f.submit "Login" %>

          <div class="signup-text">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Don't have an account? Create one now", new_registration_path(resource_name) %><br />
            <% end -%>

            <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
              <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
            <% end -%>
          </div>
          <!-- <hr>
          <h2>or login with</h2>
          <div class="login-icons">
            <ul>
              <li><a href="#" class="facebook"><i class="fa fa-facebook"></i></a></li>
              <li><a href="#" class="twitter"><i class="fa fa-twitter"></i></a></li>
              <li><a href="#" class="google"><i class="fa fa-google-plus"></i></a></li>
              <li><a href="#" class="dribbble"><i class="fa fa-dribbble"></i></a></li>
            </ul>
          </div> -->
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- //login -->
