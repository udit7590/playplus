<!-- login -->
<div class="login">
  <div class="container">
    <div class="login-body">
      <div class="login-heading">
        <h1>Register</h1>
      </div>
      <div class="login-info">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <%= f.text_field :first_name, autofocus: true, placeholder: 'First Name', required: true, class: 'user' %>
          <%= f.text_field :last_name, autofocus: true, placeholder: 'Last Name', required: true, class: 'user' %>
          <%= f.email_field :email, autofocus: true, placeholder: 'Email', required: true, class: 'user' %>

          <%= f.password_field :password, autocomplete: "off", placeholder: "Password (#{ @minimum_password_length ? (@minimum_password_length.to_s + ' characters minimum') : '' })", class: 'lock' %>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password', class: 'lock' %>

          <div class="forgot-top-grids">

          <%= f.submit "Register and send confirmation instructions" %>

          <div class="signup-text">
            <%- if controller_name != 'sessions' %>
              <%= link_to "Already have an account? Login here", new_session_path(resource_name) %><br />
            <% end -%>
          </div>
          <!-- <hr>
          <h2>or login with</h2>
          <div class="login-icons">
            <ul>
              <li><a href="#" class="facebook"><i class="fa fa-facebook"></i></a></li>
              <li><a href="#" class="twitter"><i class="fa fa-twitter"></i></a></li>
              <li><a href="#" class="google"><i class="fa fa-google-plus"></i></a></li>
              <li><a href="#" class="dribbble"><i class="fa fa-dribbble"></i></a></li>
            </ul>
          </div> -->
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- //login -->
