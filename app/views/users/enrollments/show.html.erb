<!-- User Enrollments -->
  <div class="contact">
    <div class="container">
      <div class="contact-heading">
          <h2 class="wow fadeInDown animated" data-wow-delay=".5s">Enrollment Details</h2>
          <p class="wow fadeInUp animated" data-wow-delay=".5s">Here is all the information you need related to your enrollment.</p>
        </div>
      <div class="map wow fadeInUp animated" data-wow-delay=".5s">
        <div class="table-responsive">
          <div class="jumbotron">
            <h2>
              ID: <%= @enrollment.id %>
              <%= link_to user_enrollments_path(current_user) do %>
                <button class="btn btn-warning pull-right">Back to My Enrollments</button>
              <% end %>
            </h2>
            
            <!-- Enrollment details -->
            <table class="table table-bordered table-hover table-striped">
              <tbody>
                <tr>
                  <td>Course Name</td>
                  <td><%= @enrollment.course.name.humanize %></td>
                </tr>
                <tr>
                  <td>Course Level</td>
                  <td><%= @enrollment.course_level.level_name %></td>
                </tr>
                <tr>
                  <td>Further Course Levels</td>
                  <td><%= (@enrollment.course_level.further_levels).join(' | ') %></td>
                </tr>
                <tr>
                  <td>Location/Address</td>
                  <td><%= @enrollment.provider_complete_address %></td>
                </tr>
                <tr>
                  <td>Start Date</td>
                  <td><%= @enrollment.course_batch.start_date.to_date.to_s(:long) %></td>
                </tr>
                <tr>
                  <td>End Date</td>
                  <td><%= @enrollment.course_batch.end_date.to_date.to_s(:long) %></td>
                </tr>
                <tr>
                  <td>Total Sessions</td>
                  <td><%= @enrollment.course_level.sessions %></td>
                </tr>
                <tr>
                  <td>Session Duration</td>
                  <td><%= @enrollment.course_level.session_duration %> Minutes</td>
                </tr>
                <tr>
                  <td>Price</td>
                  <td><%= @enrollment.course_batch.course_level.price_display %></td>
                </tr>
                <tr>
                  <td>Taxes (20% Service Tax)</td>
                  <td><%= @enrollment.course_batch.course_level.taxes_display %></td>
                </tr>
                <tr>
                  <td>Net Amount</td>
                  <td><%= @enrollment.course_batch.course_level.net_amount_display %></td>
                </tr>
                <tr>
                  <td>Status <button type="button" class="btn btn-sm btn-info" <%= tooltip(states_help, :top, true) %>>?</button></td>
                  <td><%= @enrollment.state_name.to_s %></td>
                </tr>
              </tbody>
            </table>
            <!-- Enrollment details end -->

          </div>
        </div>
      </div>
    </div>
  </div>
<!-- User Enrollments -->
